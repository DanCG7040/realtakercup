    </main>
</Layout>
 
    <style>
        /* Estilos para la sección de logros */

  
        body {
    background-image: url('/public/img/43453549-fondo-verde-oscuro-abstracto-con-hexágonos.jpg');
    background-size: cover; /* Asegura que la imagen cubra toda la pantalla */
    background-repeat: no-repeat; /* Evita que la imagen se repita */
    background-position: bottom; /* Posiciona la imagen en la parte inferior */
    min-height: 100vh; /* Asegura que el fondo cubra toda la altura de la pantalla */
    margin: 0; /* Elimina márgenes */
}

     


    .nav-button {
        position: relative;
        font-size: 1.125rem; /* text-lg equivalente en Tailwind */
        font-weight: 600; /* font-semibold equivalente en Tailwind */
        padding: 0.5rem;
        color: #ffffff; /* Texto blanco en los botones de navegación */
        transition: color 0.3s ease, transform 0.3s ease;
    }

    .nav-button:hover {
        color: #009900; /* Verde oscuro en hover */
        transform: scale(1.1); /* Aumenta ligeramente el tamaño */
    }

    .nav-button::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 2px;
        bottom: 0;
        left: 0;
        background-color: #009900; /* Verde oscuro */
        transform: scaleX(0);
        transform-origin: bottom right;
        transition: transform 0.3s ease;
    }

    .nav-button:hover::after {
        transform: scaleX(1);
        transform-origin: bottom left;
    }
    .countdown {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        font-size: 1.5rem; /* Tamaño de fuente más grande */
        font-weight: bold;
    }

    .countdown-item {
        background: #003300; /* Verde oscuro */
        color: #ffffff; /* Texto blanco */
        padding: 1rem 2rem; /* Relleno más grande */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    .countdown-value {
        display: block;
        font-size: 2rem; /* Tamaño del valor del cronómetro */
    }
        #logros {
            margin: 2rem 0;
            text-align: center;
        }
    
        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 2rem;
        }
    
        .logro {
            flex: 1 1 calc(33% - 2rem);
            background-color:  #009900;
            padding: 1rem;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    
        .logro h2 {
            font-size: 1.5rem;
            color: #333;
            margin-bottom: 0.5rem;
        }
    
        .logro p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 1rem;
        }
    
        .logro img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            object-fit: cover;
        }
